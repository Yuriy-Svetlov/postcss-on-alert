{
  "name": "postcss-on-alert",
  "version": "0.1.2",
  "description": "Calls a function when an error or warning message is received",
  "main": "index.js",
  "license": "MIT",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "live-alert"
  ],
  "files": [
    "LICENSE",
    "Readme.md",    
    "index.js",
    "lib"
  ],
  "scripts": {
    "test": "jest && eslint ."
  },
  "author": "semiromid <startpascal@mail.ru>",
  "license": "MIT",
  "repository": "semiromid/postcss-on-alert",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.8"
  },
  "devDependencies": {
    "clean-publish": "^2.1.0",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "lodash.merge": "^4.6.2",
    "postcss": "^8.2.8",
    "simple-git-hooks": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off",
      "jest/no-done-callback": "off",
      "no-mixed-spaces-and-tabs": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
